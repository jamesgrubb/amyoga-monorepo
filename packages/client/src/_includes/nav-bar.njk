<div class="wrapper">
    <nav arial-labelledby="nav-heading" class="nav-bar" x-data="{ isOpen: false}" :aria-expanded="isOpen">
        <a class="masthead" href="{{page.url}}">
            <figure>
                {% include './symbols/yoga.njk' %}
                {% include './symbols/with-amy.njk' %}
            </figure>
        </a>
        <ul x-cloak  :hidden="!isOpen" id="nav-bar" class="nav-bar__nav-items">
            {%- for link in collections.paginated -%}
    
            <li {% if link == page.url %} aria-current="page" {% endif %} class="nav-bar__nav-item"><a class="link"
                    href="{{ page.url }}">{{ link.data.title }}</a></li>
            {%- endfor %}
        </ul>
        <button :aria-expanded="isOpen" aria-controls="nav-bar" @click="isOpen = !isOpen" class="icon toggle-nav"><span class="sr-only">toggle menu</span>{% include './symbols/nav-toggle.njk' %}</button>
    </nav>
</div>